<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DrumBuddy.App"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
      <FluentTheme >
          <FluentTheme.Palettes>
              <!-- Palette for Light theme variant -->
              <ColorPaletteResources x:Key="Light" Accent="LightSlateGray" RegionColor="White" ErrorText="Red" />
           </FluentTheme.Palettes>
        </FluentTheme>
        <StyleInclude Source="avares://DrumBuddy/Assets/Icons.axaml"></StyleInclude>
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
    </Application.Styles>
</Application>