<rxui:ReactiveUserControl x:TypeArguments="vm:HomeViewModel" xmlns="https://github.com/avaloniaui"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:vm="clr-namespace:DrumBuddy.Client.ViewModels"
                          mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                          x:Class="DrumBuddy.Client.Views.HomeView">
    <Design.DataContext>
        <vm:HomeViewModel />
    </Design.DataContext>
    <Grid RowDefinitions="0.3*,0.7*">
        <StackPanel Grid.Row="0" VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Label x:Name="WelcomeLabel"
                   FontFamily="{StaticResource NunitoFont}"
                   FontSize="40"
                   FontWeight="Bold"
                   HorizontalAlignment="Center">
                Welcome to DrumBuddy client!
            </Label>
            <Label x:Name="SubTextLabel"
                   FontFamily="{StaticResource NunitoFont}"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   FontWeight="Bold">
                To continue, please select an option from the menu on the left.
            </Label>
        </StackPanel>
        <Image Grid.Row="1" x:Name="HomeIcon"
               VerticalAlignment="Top"
               HorizontalAlignment="Center" 
               MaxHeight="1000" MaxWidth="1000"
                Stretch="UniformToFill"
               Source="avares://DrumBuddy.Client/Assets/snare-icon.jpg" />
    </Grid>

</rxui:ReactiveUserControl>