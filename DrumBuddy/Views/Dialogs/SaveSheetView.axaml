<rxui:ReactiveWindow x:TypeArguments="dialogs:SaveSheetViewModel" xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rxui="http://reactiveui.net"
        xmlns:dialogs="clr-namespace:DrumBuddy.ViewModels.Dialogs"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DrumBuddy.SaveSheetView"
        Title="SaveSheetView">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <TextBox IsReadOnly="True" Grid.ColumnSpan="2">
      Would you like to save this sheet? If so, please enter a name for the sheet.
    </TextBox>
    <TextBox Grid.Row="1" x:Name="NameTB" Grid.ColumnSpan="2"/>
    <Button x:Name="SaveButton" Grid.Row="2" Grid.Column="0">Save</Button>
    <Button x:Name="CancelButton" Grid.Row="2" Grid.Column="1">Cancel</Button>
  </Grid>
</rxui:ReactiveWindow>
