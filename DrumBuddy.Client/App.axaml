<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DrumBuddy.Client.App"
             RequestedThemeVariant="Light">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme>
            <FluentTheme.Palettes>
                <!-- Palette for Light theme variant -->
                <ColorPaletteResources x:Key="Light" Accent="LightSlateGray" RegionColor="White" ErrorText="Red" />
            </FluentTheme.Palettes>
        </FluentTheme>
        <StyleInclude Source="avares://DrumBuddy.Client/Assets/Icons.axaml" />
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml" />
    </Application.Styles>
    <Application.Resources>
        <FontFamily x:Key="NunitoFont">avares://DrumBuddy.Client/Assets/Fonts#</FontFamily>
    </Application.Resources>
</Application>